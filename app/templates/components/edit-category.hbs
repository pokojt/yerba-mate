{{#if editCategoryShow}}
<div class="editCategorySection">
  <h2>Edit category</h2>
  <form class="editPostForm">
    <div class="form-group">
      <label for="name">Category Name</label>
      {{input value=category.name id="category" placeholder=category.name}}
    </div>
    <button class="addNew2" {{action 'editCategory' category}}>Save Edits</button>
  </form>
  <button class="cancelEdit"{{action 'toggleEdit'}}>Cancel</button>
</div>
{{else}}
  <div class="editCategorySection">
    <button id="editCategoryButton"{{action 'toggleEdit'}}>Edit Name</button>
  </div>
{{/if}}
